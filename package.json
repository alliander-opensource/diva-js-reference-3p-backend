{
  "name": "diva-js-reference-3p-backend",
  "version": "1.0.0",
  "description": "A backend for a reference implementation that uses the Diva SDK to verify IRMA attributes.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon -e js,html src/server.js",
    "prod": "node src/server.js",
    "lint": "./node_modules/.bin/eslint -c .eslintrc src",
    "migrate": "./node_modules/.bin/knex migrate:latest",
    "test": "mocha 'src/**/*.e2e.js'",
    "test:watch": "mocha --watch 'src/**/*.e2e.js'",
    "test:unit": "mocha 'src/**/*.spec.js'"
  },
  "private": true,
  "keywords": [
    "irma",
    "attributes",
    "privacy",
    "identity",
    "management"
  ],
  "contributors": [
    "Koen van Ingen",
    "Timen Olthof",
    "Alliander N.V. (https://alliander.com/)"
  ],
  "license": "BSD-3-Clause",
  "dependencies": {
    "basic-auth": "2.0.0",
    "cookie-encrypter": "0.2.3",
    "cookie-parser": "1.4.3",
    "diva-irma-js": "git+https://github.com/Alliander/diva-irma-js.git#9fec07ac3631e04acbfa720d5bacac7455798d15",
    "express": "4.16.1",
    "log4js": "2.10.0",
    "moment": "2.22.1",
    "nanoid": "1.0.3",
    "qr-image": "3.2.0",
    "superagent": "3.8.0",
    "uuid": "3.1.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "eslint": "4.8.0",
    "eslint-config-airbnb": "15.1.0",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-jasmine": "2.9.1",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-mocha": "4.11.0",
    "eslint-plugin-react": "7.4.0",
    "mocha": "4.0.1",
    "supertest": "3.0.0",
    "supertest-as-promised": "4.0.2"
  }
}
